{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "outDir": "dist",
    "jsxImportSource": "vue",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@xihan-ui/*": ["packages/*"],
      "xihan-ui": ["xihan-ui"],
      "play-ground": ["play-ground"]
    },
    "types": ["vite/client", "vue", "@vue/runtime-core"]
  },
  "include": [
    "packages",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "xihan-ui",
    "play-ground"
  ],
  "exclude": ["node_modules", "dist"]
}
