{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "noEmit": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM"],
    "module": "ES6",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@xihan-ui/*": ["packages/*"]
    },
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "types": ["vue"],
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages", "packages/**/*.{ts,tsx,vue}", "packages/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
