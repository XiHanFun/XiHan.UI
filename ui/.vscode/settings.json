{
  // 拼写检查
  "cSpell.words": ["xihan", "XiHan", "xihan-ui", "xihanui", "zhaifanhua"],
  // 包管理器
  "npm.packageManager": "pnpm",
  // 控制相关文件嵌套展示
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    // 关于项目
    "README.md": "README*,CHANGELOG*,LICENSE,CNAME,.cursorrules",
    // 包管理
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,.gitattributes,.gitignore,.npmrc",
    // 开发规范
    ".eslintrc.mjs": ".eslintrc.*,eslint.config.*,eslint.config.mjs,.prettierrc.*,prettier.config.*,prettier.config.mjs,.stylelintrc.*,stylelint.config.*,stylelint.config.mjs,.commitlintrc.*,commitlint.config.*,commitlint.config.mjs,.editorconfig,lint-staged.config.*",
    // 类型定义
    "tsconfig.json": "tsconfig.*.json",
    // 开发环境
    "vite.config.mts": "vite.config.d.mts,vitest.config.mts,vitest.config.d.mts,.env*,.env.local,.env.development,.env.production"
  },
  // 翻译插件配置
  "commentTranslate.source": "Google",
  // 国际化插件配置
  "i18n-ally.localesPaths": ["packages/locales/lang"],
  "i18n-ally.enabledParsers": ["ts"],
  "i18n-ally.enabledFrameworks": ["vue", "vue-sfc"],
  "i18n-ally.keystyle": "nested",
  "git.ignoreLimitWarning": true
}
