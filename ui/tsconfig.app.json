{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // 输出目录
    "outDir": "dist",
    // 启用复合项目
    "composite": true,
    // 启用 JSX 支持
    "jsx": "preserve",
    // 指定 JSX 导入源
    "jsxImportSource": "vue",
    // 目标 ECMAScript 版本
    "lib": ["ESNext", "DOM"],
    // 类型
    "types": ["vite/client", "vue"],
    // 模块类型
    "module": "ESNext",
    // 模块解析策略
    "moduleResolution": "Bundler",
    // 生成声明文件
    "declaration": true,
    // 路径别名
    "paths": {
      // 主包
      "xihan-ui/*": ["xihan-ui/src/*"],
      // 子包
      "@xihan-ui/utils/*": ["packages/utils/src/*"],
      "@xihan-ui/constants/*": ["packages/constants/src/*"],
      "@xihan-ui/hooks/*": ["packages/hooks/src/*"],
      "@xihan-ui/icons/*": ["packages/icons/src/*"],
      "@xihan-ui/directives/*": ["packages/directives/src/*"],
      "@xihan-ui/components/*": ["packages/components/src/*"],
      "@xihan-ui/plugins/*": ["packages/plugins/src/*"],
      "@xihan-ui/themes/*": ["packages/themes/src/*"],
      "@xihan-ui/locales/*": ["packages/locales/src/*"]
    }
  },
  // 包含的文件
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "xihan-ui/**/*.ts",
    "xihan-ui/**/*.tsx",
    "xihan-ui/**/*.vue",
    "internal/**/*.ts"
  ],
  // 排除的文件
  "exclude": ["**/node_modules/**", "**/tests/**", "**/dist/**"]
}
