{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // 模块类型
    "module": "ESNext",
    // 模块解析策略
    "moduleResolution": "Bundler",
    // 路径别名
    "paths": {
      "@xihan-build/*": ["internal/build/src/*"],
      "@xihan-dev/*": ["internal/dev/src/*"]
    }
  },
  // 包含的文件
  "include": ["scripts/**/*", "vite.config.mts", "vitest.config.mts", "internal/**/*.ts"],
  // 排除的文件
  "exclude": ["dist"]
}
